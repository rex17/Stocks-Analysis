<%= render 'common/errors', obj: @user %>

<div class="row">
    <div class="signup well well-lg">
      <div class="col-xs-12">
        <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class="form-group">
          <div class="control-lbel col-sm-2">
            <%= f.label :username %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :username, class: 'form-control', placeholder: 'Enter User Name', autofocus: true %> 
          </div>
        </div>
        

        <div class="form-group">
          <div class="control-lbel col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-6">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email', autofocus: true %> 
          </div>
        </div>
         
        
        <div class="form-group">
          <div class="control-lbel col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Password', autofocus: true %> 
          </div>
        </div>
         
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.submit(@user.new_record? ? 'Sign Up' : 'Update', class: 'btn btn-primary btn-lg') %>
          </div>
        </div> 
        <% end  %>
      </div>
    </div>
    <div class="employee-actions">
      <%= link_to 'Back to list', employees_path, class: 'btn btn-xs btn-success' %>
    </div>    
</div>