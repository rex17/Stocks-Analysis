<h2 align="center"> DMS Users: </h2>

<div align="center">
	<%= will_paginate %>
	<% @users.each do |user| %>
	<ul class="userlisting">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li><%= link_to gravatar_for(user), user_path(user) %></li>
				<li class="employee-id"><%= link_to user.username, user_path(user) %> </li>
				<li><small><%= pluralize(user.employees.count, "employee") if user.employees %></small></li>
				<% if logged_in? and current_user.admin? %>
					<li><%= link_to "Delete User", user_path(user) , class: 'btn btn-primary btn-danger', method: :delete,
									data: { confirm: "Are you sure?"} %></li>
				<% end %>	
			</div>
		</div>
	</ul>
	<% end %>
	<%= will_paginate %>
</div>